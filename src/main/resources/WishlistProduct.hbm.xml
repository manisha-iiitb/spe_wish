<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	 <class name="org.acms.WishlistService.model.WishlistProduct" table="WishlistProduct">
	 
      <meta attribute = "class-description">
         This class contains the details of the wishlisted single product. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "product_id" column = "product_id" type = "int"/>
      <property name = "wishlist_id" column = "wishlist_id" type = "int"/>
      <property name = "quantity" column = "quantity" type = "int"/>
      <property name = "remaining_qty" column = "remaining_qty" type = "int"/>
      <property name = "address" column = "address" type = "string"/>
      <property name = "reason" column = "reason" type = "string"/>
     
	</class>
	
</hibernate-mapping>