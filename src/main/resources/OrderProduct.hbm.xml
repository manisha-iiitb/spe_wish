<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	 <class name="org.acms.WishlistService.model.OrderProduct" table="OrderProduct">
	 
      <meta attribute = "class-description">
         This class contains the details of the ordered product. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "order_id" column = "order_id" type = "int"/>
      <property name = "product_id" column = "product_id" type = "int"/>
      <property name = "quantity" column = "quantity" type = "int"/>
      <property name = "price" column = "price" type = "float"/>
     
	</class>
	
</hibernate-mapping>